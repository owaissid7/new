<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <ImageView

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/white_round_img"
            android:id="@+id/img_sticker"/>




    <ImageView

        android:layout_width="40dp"
        android:id="@+id/img_cancel"
        android:layout_marginEnd="10dp"
        android:layout_height="40dp"
        android:layout_gravity="end"

        android:src="@drawable/ic_round_cancel_24"/>

</FrameLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:paddingBottom="5dp"
        android:id="@+id/linear_back"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/white_round_half"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/white"

            android:gravity="center">
            <LinearLayout

                android:id="@+id/linear3"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/l_whatsapp"
                    android:background="@drawable/white_riplple_curve"

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/whatsapps2"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/textview1f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingBottom="2dp"
                        android:text="Messenger"

                        android:textColor="#000000"
                        android:textSize="10sp" />
                </LinearLayout>


                <LinearLayout
                    android:background="@drawable/white_riplple_curve"
                    android:id="@+id/l_share"



                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/share"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:id="@+id/textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"

                        android:text="Share"
                        android:textSize="10sp"
                        android:textColor="#000000"/>
                </LinearLayout>


                <LinearLayout
                    android:background="@drawable/white_riplple_curve"
                    android:id="@+id/l_fav_s"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/fav_card"
                        android:gravity="center"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:orientation="horizontal">
                        <!--38-->
                    <com.airbnb.lottie.LottieAnimationView

              android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:lottie_rawRes="@raw/favour_heart"
                        android:id="@+id/lottie_fav"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"

                        android:text="Favourite"
                        android:textSize="10sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/white_riplple_curve"
                    android:id="@+id/l_gallery"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="2dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/gallery"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:id="@+id/textview5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingBottom="2dp"

                        android:text="Save"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                </LinearLayout>


            </LinearLayout>


</androidx.cardview.widget.CardView>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:padding="4dp"
                android:id="@+id/linear_share"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/white_riplple_curve"
                    android:id="@+id/share_whats"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView

                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/whatsapps2"
                        />

                    <TextView android:fontFamily="@font/poppins"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WhatsApp"

                        android:paddingBottom="4dp"
                        android:textSize="12sp"
                        android:textColor="#000000"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/white_riplple_curve"
                    android:id="@+id/instagram"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/instagram"
                        />
                    <TextView android:fontFamily="@font/poppins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instagram"

                        android:paddingBottom="4dp"
                        android:textSize="12sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:background="@drawable/white_riplple_curve"
                    android:id="@+id/messenger"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/messenger"
                        />
                    <TextView android:fontFamily="@font/poppins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Messenger"

                        android:paddingBottom="4dp"
                        android:textSize="12sp"
                        android:textColor="#000000"/>
                </LinearLayout>

            </LinearLayout>


    </LinearLayout>

</LinearLayout>