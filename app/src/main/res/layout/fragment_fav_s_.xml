<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fav_s_Fragment">

    <androidx.recyclerview.widget.RecyclerView
                 android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_favs"/>
    <ScrollView
        android:layout_width="match_parent"
        android:nestedScrollingEnabled="true"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:id="@+id/textviews"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="200dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_broken_heart"/>

        <TextView android:fontFamily="@font/poppins"

            android:background="@drawable/custom_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"

            android:padding="5dp"
            android:textColor="#000000"
android:gravity="center"
            android:text="List Is Empty...\nAdd your Liked Category from Category Tab"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>