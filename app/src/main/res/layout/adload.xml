<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:padding="15dp"
    android:background="@drawable/gradient_emoji"
    android:layout_height="wrap_content">
    <com.iammert.tileprogressview.TiledProgressView
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:id="@+id/progressbar"
        android:layout_margin="6dp" />


    <TextView android:fontFamily="@font/poppins"
        android:id="@+id/textprog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="8dp"
        android:gravity="center_horizontal"
        android:text="Please Wait..."
        android:textSize="18sp"
        android:textColor="#ffffff"/>
  <TextView android:fontFamily="@font/poppins"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:text="Loading Sticker..."
        android:textSize="18sp"
        android:textColor="#ffffff"/>

    <TextView android:fontFamily="@font/poppins"
        android:id="@+id/textclose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginTop="12dp"
        android:text="Cancel"
        android:background="@drawable/custom_riplple"
        android:textStyle="bold"
        android:textSize="16sp"

        android:textColor="#E31B1B"/>

</LinearLayout>