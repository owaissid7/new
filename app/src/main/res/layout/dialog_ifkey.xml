<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    android:background="@drawable/gradient_emoji"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
 >
<ImageView
    android:layout_width="40dp"
    android:id="@+id/close"
    android:layout_marginEnd="8dp"
    android:layout_height="40dp"
    android:layout_marginBottom="8dp"
    android:layout_gravity="end"
    android:src="@drawable/ic_round_cancel_24"/>
<TextView android:fontFamily="@font/poppins"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="KeyBoard is currently disabled\nEnable it, To Use This Feature"
  android:paddingEnd="8dp"
    android:paddingStart="8dp"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:background="@drawable/gradient_pickup"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_riplple_curve"

        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/l_addkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/keyb"
            android:orientation="horizontal">
            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:src="@drawable/keyboardsetting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:fontFamily="@font/lob2"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text=" Enable Animated KeyBoard  "/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/l_enablekey"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/keyb"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:src="@drawable/keyboardsetting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:fontFamily="@font/lob2"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text=" Make As Default KeyBoard"/>


        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>