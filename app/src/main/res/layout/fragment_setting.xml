<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"


    android:layout_height="match_parent"
    tools:context=".Fragment.SettingFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:nestedScrollingEnabled="true"
        android:layout_height="0dp"
        android:layout_weight="1">

    <LinearLayout
    android:padding="6dp"
        android:layout_marginTop="10dp"
    android:gravity="center_horizontal"
    android:background="@drawable/gradient_emoji"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


<TextView android:fontFamily="@font/poppins"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Animated Stickers KeyBoard"
  android:paddingEnd="4dp"
    android:layout_marginTop="15dp"
    android:paddingStart="4dp"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:background="@drawable/gradient_pickup"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_riplple_curve"

        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/l_addkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/keyb"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:src="@drawable/keyboardsetting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:fontFamily="@font/lob2"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text=" Enable Animated KeyBoard  "/>
            <ImageView
                android:id="@+id/add_key"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src="@drawable/circle_outline_24"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/l_enablekey"
           android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/keyb"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:src="@drawable/keyboardsetting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:fontFamily="@font/lob2"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text=" Make As Default KeyBoard"/>


        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>