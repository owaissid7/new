<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Fav_c_Fragment">

    <androidx.recyclerview.widget.RecyclerView

        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_favs"/>
    <ScrollView
        android:layout_width="match_parent"
        android:nestedScrollingEnabled="true"
        android:layout_height="wrap_content"
        android:layout_weight="1">



    <LinearLayout
        android:id="@+id/textviewc"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:orientation="vertical">
  <ImageView
      android:layout_marginTop="200dp"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:src="@drawable/ic_broken_heart"/>


    <TextView android:fontFamily="@font/poppins"


        android:background="@drawable/custom_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="5dp"
       android:gravity="center"
       android:textColor="#000000"
        android:text="List Is Empty...\nAdd your Liked Sticker from Category Tab"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>